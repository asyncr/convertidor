<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_tv"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/background"
        android:gravity="center"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edtHexa"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/custom"
        android:digits="0123456789ABCDEFabcdef"
        android:hint="@string/hexa"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/background_text"
        android:textColorHint="@color/background_text"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtOctal"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtBinary"
        android:layout_width="match_parent"
        android:layout_height="42dp"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/custom"
        android:digits="01"
        android:hint="@string/binary"
        android:imeOptions="actionNext"
        android:inputType="number"

        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/background_text"
        android:textColorHint="@color/background_text"
        android:textSize="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDecimal"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtOctal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom"
        android:digits="01"
        android:hint="@string/octal"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/background_text"
        android:textColorHint="@color/background_text"
        android:textSize="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtBinary"
        app:layout_constraintVertical_bias="0.0" />

    <EditText

        android:id="@+id/edtDecimal"
        android:layout_width="match_parent"
        android:layout_height="42dp"

        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/custom"
        android:hint="@string/decimal"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:paddingRight="8dp"

        android:textColor="@color/background_text"
        android:textColorHint="@color/background_text"
        android:textSize="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_bias="0.054" />


</androidx.constraintlayout.widget.ConstraintLayout>